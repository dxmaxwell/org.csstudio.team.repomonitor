<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.csstudio.frib.repomon.toolbar">
            <dynamic
                  class="org.csstudio.team.repomonitor.indicator.RepoToolbarIndicator"
                  id="org.csstudio.frib.repomon.toolbar.indicator">
            </dynamic>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.csstudio.startup.module">
      <services
            class="org.csstudio.team.repomonitor.RepoMonitorStartup">
      </services>
   </extension>

</plugin>
